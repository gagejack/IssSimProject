package mainPackage;

import java.io.IOException;

import javax.swing.JFrame;
import javax.swing.JLayeredPane;

public class SimWindow {
	
	GUIControl guiObj = new GUIControl();

	private int mainWidth = 500;
	private int mainHeight = 500;
	
	private JFrame mainFrame;	
	JLayeredPane layeredPane = new JLayeredPane();
	
	public void openMainWindow() throws IOException {
		mainFrame = new JFrame();
		mainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		mainFrame.setSize(mainWidth,mainHeight);
		mainFrame.setLocationRelativeTo(null);
		mainFrame.setLayout(null);
		mainFrame.setIconImage(guiObj.rocketIcon.getImage());

		layeredPane.setBounds(0, 0, 500, 500);
		mainFrame.add(layeredPane);
		
		guiObj.displayMainBg();
		guiObj.displayArrowKeys();
				
		guiObj.upKeyListener(layeredPane);
		guiObj.downKeyListener(layeredPane);
		guiObj.leftKeyListener(layeredPane);
		guiObj.rightKeyListener(layeredPane);

		
		mainFrame.setVisible(true);
		}
	
}
